{
  "name": "minimal-new-tab",
  "version": "1.0.0",
  "description": "A minimal, greyscale new tab page with todo list and notes",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "deploy-edge-function": "./deploy-edge-function.sh",
    "db:setup": "./scripts/setup-supabase.sh",
    "db:link": "supabase link",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase migration new",
    "db:dump": "supabase db dump --schema public"
  },
  "keywords": [
    "chrome-extension",
    "new-tab",
    "todo",
    "notes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inframanufaktur/clean-urls": "^1.0.1",
    "@preact/signals": "^2.5.0",
    "@supabase/supabase-js": "^2.39.0",
    "preact": "^10.27.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@types/chrome": "^0.1.29",
    "esbuild": "^0.19.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  }
}
