{
  "manifest_version": 3,
  "name": "Minimal New Tab",
  "version": "1.0.0",
  "description": "A minimal, greyscale new tab page with todo list and notes",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "239158609207-f82v1cgm2ma8daj2i85qcfi0lttpmv88.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly"
    ]
  }
}
