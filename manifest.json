{
  "manifest_version": 3,
  "name": "Minimal New Tab",
  "version": "1.0.0",
  "description": "A minimal, greyscale new tab page with todo list and notes",
  "chrome_url_overrides": {
    "newtab": "src/pages/newtab/index.html"
  },
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "alarms"
  ],
  "background": {
    "service_worker": "src/pages/background/index.ts",
    "type": "module"
  },
  "host_permissions": [
    "https://api.notion.com/*",
    "https://www.googleapis.com/*",
    "https://*.supabase.co/*",
    "https://api.figma.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["auth-callback.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
